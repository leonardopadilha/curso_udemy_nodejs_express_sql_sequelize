mixin form(client)
    if !client
        div.form-group
            input.form-control(
                type="type",
                name="cliente",
                id="client",
                placeholder="Digite o nome do cliente"
                required
            )
        div.form-group
            input.form-control(
                type="text",
                name="cnpj",
                id="cnpj",
                placeholder="Digite o CNPJ do cliente",
                required
            )
        div.form-group
            input.form-control(
                type="text",
                name="telefone",
                id="telefone",
                placeholder="Digite um telefone",
                required
            )
        div.form-group
            input.form-control(
                type="email",
                name="email",
                id="email",
                placeholder="Digite um email",
                required
            )
        div.form-group
            input.form-control(
                type="text",
                name="contato",
                id="contato",
                placeholder="Digite um contato do cliente",
                required
            )
    else
        div.form-group
            input.form-control(
                type="type",
                name="cliente",
                id="client",
                placeholder="Digite o nome do cliente"
                required,
                value=client.client
            )
        div.form-group
            input.form-control(
                type="text",
                name="cnpj",
                id="cnpj",
                placeholder="Digite o CNPJ do cliente",
                required,
                value=client.cnpj
            )
        div.form-group
            input.form-control(
                type="text",
                name="telefone",
                id="telefone",
                placeholder="Digite um telefone",
                required,
                value=client.telefone
            )
        div.form-group
            input.form-control(
                type="email",
                name="email",
                id="email",
                placeholder="Digite um email",
                required,
                value=client.email
            )
        div.form-group
            input.form-control(
                type="text",
                name="contato",
                id="contato",
                placeholder="Digite um contato do cliente",
                required,
                value=client.contato
            )
                
        button.btn.btn-success.col-md-12(type="submit") Cadastrar